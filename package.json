{
  "name": "domain-scanner",
  "version": "0.1.0",
  "description": "Security scanning results that business leaders can actually understand and act on",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --watch 'backend/**/*.ts' --exec 'ts-node' backend/src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "keywords": [
    "security",
    "scanner",
    "nuclei",
    "vulnerability",
    "business-intelligence"
  ],
  "author": "Kiara Dev Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "bull": "^4.12.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "pdfkit": "^0.14.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.10.9",
    "@types/bull": "^4.10.0",
    "@types/uuid": "^9.0.7",
    "@types/pdfkit": "^0.13.4",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
